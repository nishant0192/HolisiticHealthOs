{
    "name": "analytics-service",
    "version": "1.0.0",
    "description": "Analytics service for Holistic Health OS",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
         "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/index.ts",
        "build": "tsc -p tsconfig.json",
        "clean": "rimraf dist",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "typecheck": "tsc --noEmit"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "analytics",
        "health",
        "microservice",
        "data",
        "statistics"
    ],
    "author": "Holistic Health OS Team",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.9.0",
        "cors": "^2.8.5",
        "date-fns": "^3.4.0",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mathjs": "^12.4.0",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "pg": "^8.14.1",
        "simple-statistics": "^7.8.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.14.0",
        "@types/pg": "^8.11.11",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.14.0",
        "@typescript-eslint/parser": "^7.14.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.3.0",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    }
}
