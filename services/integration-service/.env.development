# ------------------------------------------------
# Holistic Health OS - Production Environment Variables
# ------------------------------------------------

# --- Global Settings ---
NODE_ENV=production
LOG_LEVEL=info
LOG_DIR=/var/log/holistic-health-os

# --- Security ---
JWT_SECRET=replace_with_long_random_string_in_production
JWT_EXPIRY=24h
COOKIE_SECRET=replace_with_long_random_string_in_production

# --- Database ---
DB_HOST=postgres
DB_PORT=5432
DB_NAME=holistic_health_os
DB_USER=app_user
DB_PASSWORD=replace_with_strong_password_in_production
DB_SSL=false
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# --- Redis Cache ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=replace_with_strong_password_in_production

# --- Service URLs ---
API_GATEWAY_URL=http://api-gateway:3000
AUTH_SERVICE_URL=http://auth-service:3001/api/v1
USER_SERVICE_URL=http://user-service:3002/api/v1
INTEGRATION_SERVICE_URL=http://integration-service:3003/api/v1
ANALYTICS_SERVICE_URL=http://analytics-service:3004/api/v1
NOTIFICATION_SERVICE_URL=http://notification-service:3005/api/v1
AI_SERVICE_URL=http://ai-service:3006/api/v1

# --- API Configuration ---
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGINS=https://app.holistichealth.com,https://admin.holistichealth.com

# --- Service Timeouts (ms) ---
DEFAULT_TIMEOUT=30000
AUTH_TIMEOUT=10000
USER_TIMEOUT=10000
INTEGRATION_TIMEOUT=30000

# --- Monitoring ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=replace_with_strong_password_in_production

# --- Third-Party Integration Credentials ---
# Fitbit API
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret

# Google Fit API
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret

# Apple Health
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# --- Email Settings ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@holistichealth.com
SMTP_FROM_NAME=Holistic Health OS

# --- Notification Settings ---
PUSH_ENABLED=true
FCM_SERVER_KEY=your_firebase_cloud_messaging_keyNODE_ENV=development
PORT=3003
DB_HOST=postgres
DB_PORT=5432
DB_NAME=holistic_health_os
DB_USER=postgres
DB_PASSWORD=postgres
JWT_SECRET=dev_jwt_secret_for_local_development_only
