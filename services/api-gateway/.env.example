// .env.example
# Server Configuration
NODE_ENV=development
PORT=3000

# Microservice URLs
AUTH_SERVICE_URL=http://localhost:3001/api/v1
USER_SERVICE_URL=http://localhost:3002/api/v1
INTEGRATION_SERVICE_URL=http://localhost:3003/api/v1
ANALYTICS_SERVICE_URL=http://localhost:3004/api/v1
NOTIFICATION_SERVICE_URL=http://localhost:3005/api/v1
AI_SERVICE_URL=http://localhost:3006/api/v1

# API Documentation
API_URL=http://localhost:3000/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Request Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
AUTH_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs